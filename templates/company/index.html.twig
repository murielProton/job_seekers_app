{% extends 'base.html.twig' %}

{% block title %}Repertoire des Entreprises{% endblock %}

{% block body %}
    <h1>Repertoire des Entreprises</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Site WEB</th>
                <th>Commentaires</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in company %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.companyName }}</td>
                <td>{{ company.companyWEBSite }}</td>
                <td>{{ company.comments }}</td>
                <td>
                    <a href="{{ path('company_show', {'id': company.id}) }}">Détail</a>
                    <a href="{{ path('company_edit', {'id': company.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Acune Entreprises/Association enregistrer en Base de Donnée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('company_new') }}">Nouvelle Entreprise</a>
{% endblock %}
