{% extends 'base.html.twig' %}

{% block title %}Application index{% endblock %}

{% block body %}
    <h1>Application index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>WebSiteName</th>
                <th>CompanyName</th>
                <th>JobAdvertisement</th>
                <th>Contact</th>
                <th>PostingDate</th>
                <th>FolowUpDate</th>
                <th>Answer</th>
                <th>Unsolicited</th>
                <th>Comments</th>
                <th>JobInterview</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for application in applications %}
            <tr>
                <td>{{ application.id }}</td>
                <td>{{ application.webSiteName }}</td>
                <td>{{ application.companyName }}</td>
                <td>{{ application.jobAdvertisement }}</td>
                <td>{{ application.contact }}</td>
                <td>{{ application.postingDate ? application.postingDate|date('Y-m-d') : '' }}</td>
                <td>{{ application.folowUpDate ? application.folowUpDate|date('Y-m-d') : '' }}</td>
                <td>{{ application.answer }}</td>
                <td>{{ application.unsolicited ? 'Yes' : 'No' }}</td>
                <td>{{ application.comments }}</td>
                <td>{{ application.jobInterview }}</td>
                <td>
                    <a href="{{ path('application_show', {'id': application.id}) }}">show</a>
                    <a href="{{ path('application_edit', {'id': application.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('application_new') }}">Create new</a>
{% endblock %}
