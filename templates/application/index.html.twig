{% extends 'base.html.twig' %}

{% block title %}Application index{% endblock %}

{% block body %}
    <h1>Application index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Date</th>
                <th>Date de suivi</th>
                <th>Site WEB de l'Annonce</th>
                <th>Annonce</th>
                <th>Spontanée</th>
                <th>Commentaires</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for application in applications %}
            <tr>
                <td>{{ application.id }}</td>
                <td>{{ application.title }}</td>
                <td>{{ application.postingDate ? application.postingDate|date('Y-m-d') : '' }}</td>
                <td>{{ application.folowUpDate ? application.folowUpDate|date('Y-m-d') : '' }}</td>
                <td>{{ application.addsWEBSite }}</td>
                <td>{{ application.jobAdvertisement }}</td>
                <td>{{ application.unsolicited ? 'Yes' : 'No' }}</td>
                <td>{{ application.comments }}</td>
                <td>
                    <a href="{{ path('application_show', {'id': application.id}) }}">Détail</a>
                    <a href="{{ path('application_edit', {'id': application.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Acune Candidature en Base de Donnée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('application_new') }}">Create new</a>
{% endblock %}
