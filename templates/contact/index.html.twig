{% extends 'base.html.twig' %}

{% block title %}Liste des Contacts{% endblock %}

{% block body %}
    <h1>Liste des Contacts</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Télephone</th>
                <th>Couriel</th>
                <th>Adresss</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.forName }}</td>
                <td>{{ contact.sirName }}</td>
                <td>{{ contact.telephone }}</td>
                <td>{{ contact.eMail }}</td>
                <td>{{ contact.address }}</td>
                <td>
                    <a href="{{ path('contact_show', {'id': contact.id}) }}">Détails</a>
                    <a href="{{ path('contact_edit', {'id': contact.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">aucuns contacts</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contact_new') }}">Nouveau Contact</a>
{% endblock %}
