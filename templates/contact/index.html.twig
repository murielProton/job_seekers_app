{% extends 'base.html.twig' %}

{% block title %}Repertoir{% endblock %}

{% block body %}
    <h1>Repertoir</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Téléphone</th>
                <th>courriel</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.contactTitle }}</td>
                <td>{{ contact.forName }}</td>
                <td>{{ contact.sirName }}</td>
                <td>{{ contact.telephone }}</td>
                <td>{{ contact.eMail }}</td>
                <td>
                    <a href="{{ path('contact_show', {'id': contact.id}) }}">Détail</a>
                    <a href="{{ path('contact_edit', {'id': contact.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun Contacts en Base de Donnée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contact_new') }}">Create new</a>
{% endblock %}
