{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<h1>Contact</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>ContactTitle</th>
				<td>{{ contact.contactTitle }}</td>
			</tr>
			<tr>
				<th>ForName</th>
				<td>{{ contact.forName }}</td>
			</tr>
			<tr>
				<th>SirName</th>
				<td>{{ contact.sirName }}</td>
			</tr>
			<tr>
				<th>Telephone</th>
				<td>{{ contact.telephone }}</td>
			</tr>
			<tr>
				<th>EMail</th>
				<td>{{ contact.eMail }}</td>
			</tr>
			<tr>
				<th>Comment je l'ai rencontré</th>
				<td>{{ contact.comment }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-light btn-center" href="{{ path('contact_index') }}">Retour à la liste</a><br><br>

	<a class="btn btn-light btn-center" href="{{ path('contact_edit', {'id': contact.id}) }}">Modifier</a><br><br>

	{{ include('contact/_delete_form.html.twig') }}
{% endblock %}
