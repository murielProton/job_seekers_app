{% extends 'base.html.twig' %}

{% block title %}Index des Entretiens{% endblock %}

{% block body %}
    <h1>Index des Entretiens</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date de l'Entretien</th>
                <th>Horaire</th>
                <th>Adresse</th>
                <th>Prénom du Contact</th>
                <th>Nom du Contact</th>
                <th>Titre du Contact</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job_interview in job_interviews %}
            <tr>
                <td>{{ job_interview.id }}</td>
                <td>{{ job_interview.dateOfInterview ? job_interview.dateOfInterview|date('Y-m-d') : '' }}</td>
                <td>{{ job_interview.schedule ? job_interview.schedule|date('H:i:s') : '' }}</td>
                <td>{{ job_interview.Address }}</td>
                <td>{{ job_interview.contactForName }}</td>
                <td>{{ job_interview.contactSirName }}</td>
                <td>{{ job_interview.contactTitle }}</td>
                <td>
                    <a href="{{ path('job_interview_show', {'id': job_interview.id}) }}">Détails</a>
                    <a href="{{ path('job_interview_edit', {'id': job_interview.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">aucun entretiens</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('job_interview_new') }}">Nouvel Entretien</a>
{% endblock %}
