{% extends 'base.html.twig' %}

{% block title %}JobInterview index{% endblock %}

{% block body %}
    <h1>JobInterview index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateOfInterview</th>
                <th>Schedule</th>
                <th>Comments</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job_interview in job_interviews %}
            <tr>
                <td>{{ job_interview.id }}</td>
                <td>{{ job_interview.dateOfInterview ? job_interview.dateOfInterview|date('Y-m-d') : '' }}</td>
                <td>{{ job_interview.schedule ? job_interview.schedule|date('H:i:s') : '' }}</td>
                <td>{{ job_interview.comments }}</td>
                <td>
                    <a href="{{ path('job_interview_show', {'id': job_interview.id}) }}">show</a>
                    <a href="{{ path('job_interview_edit', {'id': job_interview.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('job_interview_new') }}">Create new</a>
{% endblock %}
