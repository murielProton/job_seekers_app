{% extends 'base.html.twig' %}

{% block title %}Détails de l'Entretien{% endblock %}

{% block body %}
    <h1>Détails de l'Entretien</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job_interview.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ job_interview.dateOfInterview ? job_interview.dateOfInterview|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Horaire</th>
                <td>{{ job_interview.schedule ? job_interview.schedule|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Commentaires</th>
                <td>{{ job_interview.comments }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('job_interview_index') }}">Retour à la Liste</a>

    <a href="{{ path('job_interview_edit', {'id': job_interview.id}) }}">Modifier</a>

    {{ include('job_interview/_delete_form.html.twig') }}
{% endblock %}
