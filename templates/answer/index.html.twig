{% extends 'base.html.twig' %}

{% block title %}Liste des Réponses{% endblock %}

{% block body %}
    <h1>Liste des Réponses</h1>

    <table class="table" data-toggle="table">
        <thead>
            <tr>
                <th data-sortable="true">Date</th>
                <th data-sortable="true">Réponses</th>
                <th >Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for answer in answers %}
            <tr>
                <td>{{ answer.date ? answer.date|date('Y-m-d') : '' }}</td>
                <td>{% for text in answer.textOfAnswer %}{{ text }}{% endfor %}</td>
                <td>
                    <a href="{{ path('answer_show', {'id': answer.id}) }}">Détails</a>
                    <a href="{{ path('answer_edit', {'id': answer.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucunes réponses trouvées en Base de Donnée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('answer_new') }}" class="btn btn-light" role="button">Nouvelle Réponse</a>
{% endblock %}
