{% extends 'base.html.twig' %}

{% block title %}Détail de la Réponse
{% endblock %}

{% block body %}
	<h1>Détail de la Réponse</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Date</th>
				<td>{{ answer.date ? answer.date|date('d-m-Y') : '' }}</td>
			</tr>
			<tr>
				<th>Réponse</th>
				<td>{{ answer.textOfAnswer }}</td>
			</tr>
			<tr>
				<th>Commentaires</th>
				<td>{{ answer.comments }}</td>
			</tr>
			<tr>
				<th>Date de l'entretien</th>
				<td>
					{% if answer.jobInterview is defined and answer.jobInterview is not null %}
						{{ answer.jobInterview.dateOfInterview ? answer.jobInterview.dateOfInterview|date('d-m-Y') : '' }}
					{% endif %}
				</td>
			</tr>
			<tr>
				<th>Horaire de l'entretien</th>
				<td>
					{% if answer.jobInterview is defined and answer.jobInterview is not null %}
						{{ answer.jobInterview.schedule ? answer.jobInterview.schedule|date('H:i:s') : '' }}
					{% endif %}
				</td>
			</tr>
		</tbody>
	</tr>
</tbody>
</table>
<a class="btn btn-light" href="{{ path('answer_index') }}">Retour à la Liste</a><br><br>
<a class="btn btn-light" href="{{ path('answer_edit', {'id': answer.id}) }}">Modifier</a><br><br>
{{ include('answer/_delete_form.html.twig') }}
{% endblock %}
