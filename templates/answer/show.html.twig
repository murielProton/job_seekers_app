{% extends 'base.html.twig' %}

{% block title %}Détail de la Réponse{% endblock %}

{% block body %}
    <h1>Détail de la Réponse</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ answer.date ? answer.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Réponse</th>
                <td>{{ answer.textOfAnswer }}</td>
            </tr>
            <tr>
                <th>Commentaires</th>
                <td>{{ answer.comments }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('answer_index') }}">Retour à la Liste</a>

    <a href="{{ path('answer_edit', {'id': answer.id}) }}">Modifier</a>

    {{ include('answer/_delete_form.html.twig') }}
{% endblock %}
