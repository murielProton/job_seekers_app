{% extends 'base.html.twig' %}

{% block title %}Answer{% endblock %}

{% block body %}
    <h1>Answer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ answer.date ? answer.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>TextOfAnswer</th>
                <td>{% for text in answer.textOfAnswer %}{{ text }}{% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('answer_index') }}">back to list</a>

    <a href="{{ path('answer_edit', {'id': answer.id}) }}">Modifier</a>

    {{ include('answer/_delete_form.html.twig') }}
{% endblock %}
